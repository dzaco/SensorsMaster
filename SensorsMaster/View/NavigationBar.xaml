<UserControl x:Class="SensorsMaster.View.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SensorsMaster.View"
             xmlns:settings="clr-namespace:SensorsMaster.AppSettings.View"
             mc:Ignorable="d" >

    <StackPanel>
        <Expander x:Name="SettingsExpander"
                  Header="App Settings">
            <settings:SizeSettingsView/>
        </Expander>
        <Expander x:Name="SensorSettingsExpander"
                  Header="Sensor Settings">

            <settings:SensorSettingsView/>
        </Expander>
    </StackPanel>
</UserControl>
